<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true"> <!-- the color when the button is enabled -->
        <shape android:shape="rectangle">
            <solid android:color="@color/LightGreen" />
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:state_checked="false"> <!-- the color when the button is disabled -->
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke android:color="@color/LightGreen" android:width="2dp"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>